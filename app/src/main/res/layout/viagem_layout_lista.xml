<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="diogolkribeiro.travelcarworkoficial.adapter.ViagemAdapter">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/ic_city" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.65"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_starting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Partida"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Destino"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />

        <TextView
            android:id="@+id/tv_startingData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Data"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />


        <TextView
            android:id="@+id/tv_Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Latitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />


        <TextView
            android:id="@+id/tv_Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Longitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />

        <TextView
            android:id="@+id/tv_busyPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="LAdequiridos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />

        <TextView
            android:id="@+id/tv_placesAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Lugares totais"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800" />







    </LinearLayout>

</LinearLayout>